<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.glassesgang">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Books.BorrowerBookProfileActivity"
            android:parentActivityName=".Users.BorrowerHomeActivity"></activity>
        <activity android:name=".Books.OwnerBookProfileActivity"
            android:parentActivityName=".Users.OwnerHomeActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GoogleSignInActivity" />
        <activity android:name=".Users.BorrowerHomeActivity"
            android:exported="true"/>
        <activity
            android:name=".Users.OwnerHomeActivity"
            android:exported="true" />
        <activity android:name=".Books.AddBookActivity" />
        <activity android:name=".Books.EditBookActivity"
            android:windowSoftInputMode="adjustNothing"/>  <!--So keyboard doesn't push up the save button-->
    </application>

</manifest>