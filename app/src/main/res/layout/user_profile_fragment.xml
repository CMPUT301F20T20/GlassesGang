<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/borrowerPrimary"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/user_type"
        android:layout_width="269dp"
        android:layout_height="44dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="112dp"
        android:background="@color/orange"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/ContactTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ContactInfo"
        android:layout_width="366dp"
        android:layout_height="95dp"
        android:layout_marginBottom="204dp"
        android:background="@color/borrowerSecondary"
        android:fontFamily="@font/source_sans_pro_bold"
        android:padding="20dp"
        android:textColor="@color/borrowerText"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/signoutbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ContactTitle"
        android:layout_width="378dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/email"
        android:textColor="@color/borrowerText"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ContactInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signoutbutton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:background="@color/red"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="@string/sign_out"
        android:textColor="@color/borrowerPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>