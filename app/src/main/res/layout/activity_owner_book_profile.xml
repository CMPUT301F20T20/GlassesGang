<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OwnerBookProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/borrowerBook_image_view"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/borrowerSecondary"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <include layout="@layout/book_profile" />

            <TextView
                android:id="@+id/borrowerTitle_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Borrower:"
                android:textColor="@color/borrowerText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/borrower_textView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/grey_card"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="center"
                android:textColor="@color/borrowerText"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <Button
                    android:id="@+id/delete_button"
                    android:layout_width="137dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/red_shape"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="DELETE"
                    android:textColor="@color/borrowerPrimary"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="137dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/orange_shape"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="EDIT"
                    android:textColor="@color/borrowerPrimary"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>