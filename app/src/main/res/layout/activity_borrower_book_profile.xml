<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BorrowerBookProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/borrowerBook_image_view"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/profile_placeholder"
                android:scaleType="centerCrop" />

            <include layout="@layout/book_profile" />

            <TextView
                android:id="@+id/ownerTitle_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="Owner:"
                android:textColor="@color/borrowerText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bookOwner_textView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/grey_card"
                android:fontFamily="@font/source_sans_pro_bold"
                android:gravity="center"
                android:text="Book Owner Email: "
                android:textColor="@color/borrowerText"
                android:textSize="24sp" />

            <FrameLayout
                android:id="@+id/borrower_book_profile_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp">

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>